<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="hotelitic.client_list">
      <field name="name">hotelitic client list</field>
      <field name="model">hotelitic.client</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="dni"/>
            <field name="birthday"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hotelitic.client_form">
      <field name="name">hotelitic client form</field>
      <field name="model">hotelitic.client</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="dni"/>
              <field name="birthday"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>